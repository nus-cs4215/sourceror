{
  "name": "sourceror",
  "version": "0.7.1",
  "description": "Compiler toolchain from Source to WebAssembly",
  "dependencies": {
    "acorn": "^7.3.1",
    "js-slang": "^0.4.60",
    "node-getopt": "^0.3.2"
  },
  "devDependencies": {
    "@types/estree": "^0.0.45",
    "@types/node": "^14.0.14",
    "ava": "^3.15.0",
    "browser-env": "^3.3.0",
    "prettier": "^2.0.5",
    "puppeteer": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "wasm-pack": "^0.9.1"
  },
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist",
    "wasm"
  ],
  "bin": {
    "sourceror": "dist/cli.js"
  },
  "scripts": {
    "ci": "yarn run format:ci",
    "build:wasm": "wasm-pack build -d ../sourceror-driver/wasm ../source-compiler",
    "build": "yarn run build:wasm && tsc && node postbuild.js",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:ci": "prettier --list-different \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "yarn run build",
    "test": "node --experimental-wasm-modules node_modules/.bin/ava",
    "test-watch": "DEBUG=node_modules/.bin/ava:watcher node --experimental-wasm-modules node_modules/.bin/ava --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/source-academy/sourceror.git"
  },
  "author": "Bernard Teo",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/source-academy/sourceror/issues"
  },
  "ava": {
    "extensions": [
      "ts",
      "js"
    ],
    "require": [
      "ts-node/register"
    ],
    "snapshotDir": "testing/__tests__/__snapshots__"
  },
  "homepage": "https://github.com/source-academy/sourceror#readme"
}
